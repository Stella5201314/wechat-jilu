.header {
  height: 48px;
  padding: 0 12px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  background: #ffffff;
  box-shadow: 0 1px 0 rgba(0,0,0,0.04);
}
.left, .right { width: 56px; display:flex; align-items:center; justify-content:flex-start; }
.center { flex:1; display:flex; flex-direction:column; align-items:center; justify-content:center; }
.title { font-size:16px; font-weight:600; color:#222; }
.subtitle { font-size:12px; color:#888; margin-top:2px; }
.back-icon { width:20px; height:20px; }
.right-text { color:#1aad19; font-size:14px; }