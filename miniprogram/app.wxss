/* 全局样式与设计令牌（可合并到原有 app.wxss） */

/* 设计令牌 */
:root {
  --color-primary: #1aad19;
  --color-bg: #f7f8fa;
  --color-card: #ffffff;
  --text-primary: #222222;
  --text-secondary: #666666;
  --muted: #999999;
  --radius: 12rpx;
  --input-height: 72rpx;
  --input-font: 30rpx;
  --gap: 18rpx;
}

/* 基础重置 */
page, view, text, image, scroll-view, button, input, textarea {
  box-sizing: border-box;
}

/* 全局背景 */
page {
  background: var(--color-bg);
  color: var(--text-primary);
  padding-bottom: 120rpx; /* 预留底部 tab space */
}

/* 卡片 */
.card {
  background: var(--color-card);
  border-radius: var(--radius);
  padding: 20rpx;
  box-shadow: 0 6rpx 18rpx rgba(0,0,0,0.04);
  margin-bottom: var(--gap);
}

/* 表单字段统一样式 */
.form-field {
  margin-bottom: 18rpx;
}
.field-label {
  color: var(--text-secondary);
  font-size: 26rpx;
  margin-bottom: 8rpx;
}

/* 输入框样式 */
.input, input {
  height: var(--input-height);
  line-height: var(--input-height);
  padding: 14rpx 18rpx;
  font-size: var(--input-font);
  border-radius: 10rpx;
  border: 1rpx solid #ececec;
  background: #fff;
  color: var(--text-primary);
}

/* textarea */
.textarea, textarea {
  min-height: 220rpx;
  padding: 16rpx 18rpx;
  font-size: 28rpx;
  border-radius: 10rpx;
  border: 1rpx solid #ececec;
  background: #fff;
  color: var(--text-primary);
  line-height: 1.6;
  resize: none;
}

/* 输入聚焦态 */
.input:focus, textarea:focus, .input:active, textarea:active {
  box-shadow: 0 8rpx 18rpx rgba(26,173,25,0.06);
  border-color: var(--color-primary);
}

/* 按钮 */
.btn-primary {
  background: var(--color-primary);
  color: #fff;
  padding: 18rpx;
  border-radius: 10rpx;
  text-align: center;
  font-size: 30rpx;
}

/* 小按钮 */
.btn-plain {
  background: #fff;
  border: 1rpx solid #e6e6e6;
  padding: 12rpx 16rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}

/* 列表与间距 */
.container { padding: 20rpx; }
.toolbar { display:flex; gap:12rpx; align-items:center; margin-bottom:12rpx; }
.search-input { flex:1; }
.list { padding-bottom: 40rpx; }

/* 使富文本/长文本更可读 */
.prewrap { white-space: pre-wrap; word-break: break-word; font-size: 30rpx; color: var(--text-primary); }