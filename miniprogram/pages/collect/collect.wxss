/* collect page overrides */
.page.container { padding:20rpx; padding-bottom:160rpx; }
.card { background: #fff; border-radius:14rpx; padding:18rpx; box-shadow:0 8rpx 20rpx rgba(0,0,0,0.04); }

/* form fields 使用全局样式，如 app.wxss 中定义 */
.form-field { margin-bottom:18rpx; }
.field-label { font-size:28rpx; color:var(--text-secondary); margin-bottom:8rpx; }

/* 按钮排布，确保两个按钮在一行显示并有最小宽度 */
.actions-row {
  display:flex;
  gap:12rpx;
  justify-content:flex-end;
  margin-top:12rpx;
}
.action-btn {
  min-width: 36%;
  text-align:center;
  border-radius:10rpx;
  font-size:30rpx;
  padding:12rpx 10rpx;
  display:inline-block;
}

/* btn styles (覆盖以保证文本可见) */
.btn-plain.action-btn {
  background:#fff;
  color:var(--text-primary);
  border:1rpx solid #e6e6e6;
}
.btn-primary.action-btn {
  background:var(--color-primary);
  color:#fff;
}

/* 兼容窄屏：按钮换行显示但仍保持可见 */
@media (max-width: 420px) {
  .actions-row { flex-wrap:wrap; }
  .action-btn { flex:1 1 48%; min-width: 44%; }
}