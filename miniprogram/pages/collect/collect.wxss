/* pages/collect/collect.wxss */

/* 页面基础样式 */
.collect-page {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

/* 页面头部 */
.page-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx 32rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #e8e8e8;
  position: sticky;
  top: 0;
  z-index: 100;
}

.header-left {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.back-icon {
  width: 32rpx;
  height: 32rpx;
  padding: 8rpx;
}

.header-title {
  font-size: 32rpx;
  font-weight: 600;
  color: #262626;
}

.header-actions {
  display: flex;
  align-items: center;
}

.btn-save-draft {
  padding: 12rpx 24rpx;
  background: #f5f5f5;
  border: 1rpx solid #d9d9d9;
  border-radius: 6rpx;
  font-size: 24rpx;
  color: #595959;
}

.btn-save-draft:active {
  background: #e8e8e8;
}

/* 滚动区域 */
.collect-scroll {
  flex: 1;
  padding: 20rpx 32rpx 120rpx;
}

/* 来源提示 */
.source-hint {
  display: flex;
  align-items: center;
  gap: 12rpx;
  padding: 16rpx 20rpx;
  margin-bottom: 20rpx;
  background: #e6f7ff;
  border: 1rpx solid #91d5ff;
  border-radius: 8rpx;
}

.hint-icon {
  width: 24rpx;
  height: 24rpx;
  flex-shrink: 0;
}

.hint-text {
  flex: 1;
  font-size: 26rpx;
  color: #1890ff;
  line-height: 1.4;
}

.btn-hint-close {
  width: 32rpx;
  height: 32rpx;
  padding: 4rpx;
  background: transparent;
  border: none;
}

.btn-hint-close image {
  width: 100%;
  height: 100%;
  opacity: 0.45;
}

.btn-hint-close:active image {
  opacity: 0.65;
}

/* 卡片通用样式 */
.card {
  background: #ffffff;
  border: 1rpx solid #e8e8e8;
  border-radius: 12rpx;
  padding: 28rpx;
  margin-bottom: 24rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

/* 区块头部样式 */
.section-header {
  display: flex;
  align-items: center;
  margin-bottom: 24rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-header-left {
  display: flex;
  align-items: center;
  gap: 12rpx;
  flex: 1;
}

.collapsible {
  padding-bottom: 0;
  border-bottom: none;
  cursor: pointer;
}

.section-icon {
  width: 28rpx;
  height: 28rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #262626;
}

.section-required {
  font-size: 24rpx;
  color: #f5222d;
  margin-left: 12rpx;
  padding: 4rpx 8rpx;
  background: #fff1f0;
  border-radius: 4rpx;
}

.section-optional {
  font-size: 24rpx;
  color: #8c8c8c;
  margin-left: 12rpx;
  padding: 4rpx 8rpx;
  background: #f5f5f5;
  border-radius: 4rpx;
}

.section-tips {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.char-count {
  font-size: 24rpx;
  color: #8c8c8c;
}

.collapse-icon {
  width: 20rpx;
  height: 20rpx;
  transition: transform 0.3s ease;
}

/* 输入区域 */
.content-input {
  width: 100%;
  min-height: 240rpx;
  padding: 20rpx;
  background: #fafafa;
  border: 1rpx solid #d9d9d9;
  border-radius: 8rpx;
  font-size: 28rpx;
  line-height: 1.6;
  margin-bottom: 20rpx;
  resize: none;
}

.content-input:focus {
  border-color: #52c41a;
  background: #f6ffed;
}

/* 输入操作按钮 */
.input-actions {
  display: flex;
  gap: 16rpx;
  flex-wrap: wrap;
}

.btn-action {
  display: flex;
  align-items: center;
  gap: 8rpx;
  padding: 16rpx 24rpx;
  background: #f5f5f5;
  border: 1rpx solid #d9d9d9;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #595959;
}

.btn-action:active {
  background: #e8e8e8;
}

.btn-icon {
  width: 20rpx;
  height: 20rpx;
}

/* OCR结果区域 */
.ocr-result {
  margin-top: 20rpx;
  animation: slideIn 0.3s ease-out;
}

.ocr-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.ocr-icon {
  width: 24rpx;
  height: 24rpx;
}

.ocr-title {
  font-size: 26rpx;
  font-weight: 500;
  color: #262626;
  flex: 1;
}

.btn-ocr-use {
  padding: 8rpx 16rpx;
  background: #52c41a;
  color: #ffffff;
  border-radius: 6rpx;
  font-size: 24rpx;
}

.ocr-content {
  padding: 16rpx;
  background: #fafafa;
  border: 1rpx solid #f0f0f0;
  border-radius: 8rpx;
  margin-bottom: 16rpx;
  max-height: 200rpx;
  overflow-y: auto;
}

.ocr-content text {
  font-size: 26rpx;
  line-height: 1.6;
  color: #595959;
}

.ocr-actions {
  display: flex;
  gap: 12rpx;
}

.btn-ocr-append,
.btn-ocr-clear {
  flex: 1;
  padding: 12rpx;
  border-radius: 6rpx;
  font-size: 24rpx;
}

.btn-ocr-append {
  background: #e6f7ff;
  border: 1rpx solid #91d5ff;
  color: #1890ff;
}

.btn-ocr-clear {
  background: #fff1f0;
  border: 1rpx solid #ffa39e;
  color: #f5222d;
}

/* 区块提示 */
.section-hint {
  font-size: 24rpx;
  color: #8c8c8c;
  margin-bottom: 20rpx;
  line-height: 1.4;
}

/* 标签描述 */
.tag-descriptions {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin-top: 24rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.tag-desc-item {
  display: flex;
  flex-direction: column;
  gap: 8rpx;
}

.tag-desc-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.tag-demo {
  width: 24rpx;
  height: 24rpx;
  border-radius: 4rpx;
}

.tag-demo.insight { background: #1890ff; }
.tag-demo.logic { background: #722ed1; }
.tag-demo.expression { background: #52c41a; }
.tag-demo.data { background: #fa8c16; }
.tag-demo.style { background: #f5222d; }

.tag-desc-name {
  font-size: 26rpx;
  font-weight: 500;
  color: #262626;
}

.tag-desc-text {
  font-size: 24rpx;
  color: #595959;
  line-height: 1.5;
  padding-left: 36rpx;
}

/* 智能识别 */
.smart-recognition {
  margin-top: 20rpx;
  padding: 20rpx;
  background: #f6ffed;
  border: 1rpx solid #b7eb8f;
  border-radius: 8rpx;
}

.recognition-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 16rpx;
}

.smart-icon {
  width: 20rpx;
  height: 20rpx;
}

.smart-title {
  font-size: 26rpx;
  font-weight: 500;
  color: #52c41a;
}

.recognition-suggestions {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.suggestion-item {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.suggestion-field {
  font-size: 24rpx;
  color: #595959;
  min-width: 120rpx;
}

.suggestion-value {
  flex: 1;
  font-size: 24rpx;
  color: #262626;
  word-break: break-all;
}

.btn-suggestion-apply {
  padding: 4rpx 12rpx;
  background: #52c41a;
  color: #ffffff;
  border-radius: 4rpx;
  font-size: 22rpx;
}

/* 分类建议 */
.category-suggestions {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.suggestions-title {
  display: block;
  font-size: 26rpx;
  color: #595959;
  margin-bottom: 12rpx;
}

.suggestion-tags {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.suggestion-tag {
  padding: 8rpx 16rpx;
  background: #f5f5f5;
  border: 1rpx solid #d9d9d9;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #595959;
}

.suggestion-tag.selected {
  background: #e6f7ff;
  border-color: #91d5ff;
  color: #1890ff;
}

/* 高级选项 */
.advanced-form {
  margin-top: 20rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.advanced-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin-bottom: 20rpx;
  padding: 16rpx;
  background: #fafafa;
  border-radius: 8rpx;
}

.advanced-label {
  font-size: 26rpx;
  color: #262626;
  font-weight: 500;
  min-width: 140rpx;
}

.privacy-options {
  display: flex;
  gap: 24rpx;
}

.privacy-option {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.option-text {
  font-size: 24rpx;
  color: #595959;
}

.advanced-hint {
  flex: 1;
  font-size: 24rpx;
  color: #8c8c8c;
  margin-left: 16rpx;
}

/* 提醒时间选择 */
.reminder-time {
  margin-top: 16rpx;
  padding: 16rpx;
  background: #f0f9ff;
  border-radius: 8rpx;
}

.reminder-picker {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 12rpx 16rpx;
  background: #ffffff;
  border: 1rpx solid #d9d9d9;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #262626;
}

.picker-icon {
  width: 20rpx;
  height: 20rpx;
  opacity: 0.45;
}

/* 底部操作按钮 */
.action-section {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  padding: 20rpx 32rpx;
  background: #ffffff;
  border-top: 1rpx solid #e8e8e8;
  box-shadow: 0 -2rpx 16rpx rgba(0, 0, 0, 0.08);
  z-index: 100;
}

.action-buttons {
  display: flex;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.btn-save,
.btn-save-analyze,
.btn-cancel {
  flex: 1;
  height: 80rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.btn-save {
  background: #52c41a;
  color: #ffffff;
}

.btn-save[disabled] {
  background: #f5f5f5;
  color: #bfbfbf;
}

.btn-save-analyze {
  background: #1890ff;
  color: #ffffff;
}

.btn-save-analyze[disabled] {
  background: #f5f5f5;
  color: #bfbfbf;
}

.btn-cancel {
  background: #ffffff;
  border: 1rpx solid #d9d9d9;
  color: #595959;
}

/* 保存状态提示 */
.save-status {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 8rpx;
  padding: 12rpx;
  border-radius: 6rpx;
  animation: fadeIn 0.3s ease-out;
}

.save-status.success {
  background: #f6ffed;
  border: 1rpx solid #b7eb8f;
}

.save-status.error {
  background: #fff1f0;
  border: 1rpx solid #ffa39e;
}

.save-status.warning {
  background: #fffbe6;
  border: 1rpx solid #ffe58f;
}

.status-icon {
  width: 20rpx;
  height: 20rpx;
}

.status-text {
  font-size: 24rpx;
}

.save-status.success .status-text {
  color: #52c41a;
}

.save-status.error .status-text {
  color: #f5222d;
}

.save-status.warning .status-text {
  color: #fa8c16;
}

/* 成功模态框 */
.modal-success {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.45);
}

.modal-success .modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  max-width: 560rpx;
  background: #ffffff;
  border-radius: 16rpx;
  overflow: hidden;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.15);
}

.modal-body {
  padding: 48rpx 32rpx 32rpx;
  text-align: center;
}

.modal-icon {
  width: 80rpx;
  height: 80rpx;
  margin-bottom: 24rpx;
}

.modal-title {
  display: block;
  font-size: 32rpx;
  font-weight: 600;
  color: #262626;
  margin-bottom: 12rpx;
}

.modal-message {
  display: block;
  font-size: 26rpx;
  color: #595959;
  line-height: 1.5;
  margin-bottom: 32rpx;
}

.modal-actions {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.modal-actions .btn-modal {
  width: 100%;
  padding: 20rpx;
  background: #f5f5f5;
  border: 1rpx solid #d9d9d9;
  border-radius: 8rpx;
  font-size: 28rpx;
  color: #595959;
}

.modal-actions .btn-modal.primary {
  background: #52c41a;
  border-color: #52c41a;
  color: #ffffff;
}

/* 确认对话框 */
.modal-confirm .modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  max-width: 560rpx;
  background: #ffffff;
  border-radius: 12rpx;
  overflow: hidden;
}

.modal-confirm .modal-header {
  padding: 24rpx;
  border-bottom: 1rpx solid #e8e8e8;
}

.modal-confirm .modal-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #262626;
  text-align: center;
}

.modal-confirm .modal-body {
  padding: 32rpx 24rpx;
}

.modal-confirm .modal-message {
  font-size: 26rpx;
  color: #595959;
  line-height: 1.5;
  text-align: center;
}

.modal-confirm .modal-footer {
  display: flex;
  padding: 16rpx 24rpx;
  border-top: 1rpx solid #e8e8e8;
  gap: 16rpx;
}

.modal-confirm .btn-modal {
  flex: 1;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
}

.modal-confirm .btn-modal.cancel {
  background: #ffffff;
  border: 1rpx solid #d9d9d9;
  color: #595959;
}

.modal-confirm .btn-modal.confirm {
  background: #f5222d;
  color: #ffffff;
}

/* 动画效果 */
@keyframes slideIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

@keyframes fadeIn {
  from {
    opacity: 0;
  }
  to {
    opacity: 1;
  }
}

/* 响应式调整 */
@media (max-width: 768px) {
  .collect-scroll {
    padding: 16rpx 24rpx 120rpx;
  }
  
  .action-section {
    padding: 16rpx 24rpx;
  }
  
  .action-buttons {
    flex-direction: column;
  }
  
  .input-actions {
    flex-direction: column;
  }
  
  .btn-action {
    width: 100%;
    justify-content: center;
  }
}