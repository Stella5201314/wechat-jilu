<view class="page container">
  <header-nav title="采集素材"></header-nav>

  <view class="card">
    <view class="form-field">
      <text class="field-label">标题</text>
      <input class="input" placeholder="请输入素材标题（建议不超过60字）" value="{{title}}" bindinput="onTitleInput" />
    </view>

    <view class="form-field">
      <text class="field-label">来源（可选）</text>
      <input class="input" placeholder="来源/出处（例如：人民日报｜2026-01-01）" value="{{source}}" bindinput="onSourceInput" />
    </view>

    <view class="form-field">
      <text class="field-label">标签（逗号分隔）</text>
      <input class="input" placeholder="例如：政策,案例,产业" value="{{tagText}}" bindinput="onTagInput" />
    </view>

    <view class="form-field">
      <text class="field-label">内容摘录（仅支持文字）</text>
      <textarea class="textarea" placeholder="粘贴或直接输入你要保存的文字片段，支持长文本" value="{{content}}" bindinput="onContentInput" />
    </view>

    <!-- 使用 view 模拟按钮，避免原生 button 被样式覆盖导致文字不可见 -->
    <view class="actions-row">
      <view class="btn-plain action-btn" bindtap="onCancel">取消</view>
      <view class="btn-primary action-btn" bindtap="onSave">{{isEdit ? '更新' : '保存'}}</view>
    </view>
  </view>

  <bottom-tabs current="collect"></bottom-tabs>
</view>