.page { min-height:100vh; background:#f7f8fa; padding-bottom:60px; }
.detail { padding:12px; background:#fff; margin:12px; border-radius:8px; }
.title { font-size:18px; font-weight:700; margin-bottom:6px; }
.meta { color:#999; font-size:12px; display:flex; gap:8px; margin-bottom:8px; }
.tags { display:flex; gap:8px; margin-bottom:8px; flex-wrap:wrap; }
.tag { background:#f0f0f0; padding:4px 8px; border-radius:12px; font-size:12px; color:#666; }
.content { max-height:400px; overflow:auto; padding-top:8px; color:#333; }
.actions { display:flex; gap:8px; margin-top:12px; flex-wrap:wrap; }