<view class="page">
  <header-nav title="素材详情"></header-nav>

  <view class="detail">
    <view class="title">{{material.title}}</view>
    <view class="meta">
      <text>{{material.source}}</text>
      <text>{{formatTime(material.created_at)}}</text>
    </view>

    <view class="tags">
      <block wx:for="{{material.tags}}" wx:key="*this">
        <text class="tag">{{item}}</text>
      </block>
    </view>

    <scroll-view class="content">
      <!-- 仅保留富文本/纯文本展示，不再渲染图片或附件 -->
      <rich-text nodes="{{material.contentRich || material.content}}"></rich-text>
    </scroll-view>

    <view class="actions">
      <button bindtap="onGeneratePrompt">用此素材生成 Prompt</button>
      <button bindtap="onEdit">编辑</button>
      <button bindtap="onDelete">删除</button>
      <button bindtap="onCopy">复制内容</button>
    </view>
  </view>

  <prompt-preview visible="{{promptVisible}}" prompt="{{currentPrompt}}" bind:close="onClosePrompt"></prompt-preview>

  <bottom-tabs current="library"></bottom-tabs>
</view>