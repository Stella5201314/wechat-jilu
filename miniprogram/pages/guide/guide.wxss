/* pages/guide/guide.wxss */

/* 页面基础样式 */
.guide-page {
  height: 100vh;
  background: linear-gradient(135deg, #f5f7fa 0%, #c3cfe2 100%);
}

/* 引导轮播 */
.guide-swiper {
  height: 100%;
}

.guide-item {
  height: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 引导内容容器 */
.guide-content {
  width: 90%;
  max-width: 600rpx;
  height: 90%;
  background: #ffffff;
  border-radius: 24rpx;
  padding: 40rpx 32rpx;
  box-shadow: 0 16rpx 48rpx rgba(0, 0, 0, 0.1);
  display: flex;
  flex-direction: column;
  overflow: hidden;
}

/* 欢迎页特殊样式 */
.guide-content.welcome {
  background: linear-gradient(135deg, #1890ff 0%, #36cfc9 100%);
  color: #ffffff;
}

/* 插画区域 */
.guide-illustration {
  flex: 1;
  display: flex;
  align-items: center;
  justify-content: center;
  min-height: 300rpx;
}

.guide-image {
  width: 400rpx;
  height: 300rpx;
  object-fit: contain;
}

.welcome .guide-image {
  filter: brightness(0) invert(1);
}

/* 文本区域 */
.guide-text {
  flex: 1;
  margin-top: 40rpx;
}

.guide-title {
  display: block;
  font-size: 36rpx;
  font-weight: 600;
  color: #262626;
  text-align: center;
  margin-bottom: 16rpx;
  line-height: 1.3;
}

.welcome .guide-title {
  color: #ffffff;
  font-size: 40rpx;
}

.guide-subtitle {
  display: block;
  font-size: 28rpx;
  color: #8c8c8c;
  text-align: center;
  margin-bottom: 32rpx;
}

.welcome .guide-subtitle {
  color: rgba(255, 255, 255, 0.9);
}

/* 欢迎页特性展示 */
.guide-features {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin-top: 40rpx;
}

.feature-item {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.welcome .feature-item {
  color: #ffffff;
}

.feature-icon {
  width: 32rpx;
  height: 32rpx;
}

.welcome .feature-icon {
  filter: brightness(0) invert(1);
}

.feature-text {
  font-size: 26rpx;
  font-weight: 500;
}

/* 引导步骤 */
.guide-steps {
  display: flex;
  flex-direction: column;
  gap: 32rpx;
  margin: 40rpx 0;
}

.step-item {
  display: flex;
  gap: 20rpx;
}

.step-number {
  width: 48rpx;
  height: 48rpx;
  background: #1890ff;
  color: #ffffff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  font-weight: 600;
  flex-shrink: 0;
}

.step-content {
  flex: 1;
  padding-top: 4rpx;
}

.step-title {
  display: block;
  font-size: 28rpx;
  font-weight: 500;
  color: #262626;
  margin-bottom: 8rpx;
}

.step-desc {
  display: block;
  font-size: 24rpx;
  color: #595959;
  line-height: 1.4;
}

/* 提示信息 */
.guide-tip {
  display: flex;
  align-items: flex-start;
  gap: 12rpx;
  padding: 20rpx;
  background: #f6ffed;
  border: 1rpx solid #b7eb8f;
  border-radius: 12rpx;
  margin-top: 32rpx;
}

.tip-icon {
  width: 24rpx;
  height: 24rpx;
  flex-shrink: 0;
  margin-top: 4rpx;
}

.tip-text {
  font-size: 24rpx;
  color: #52c41a;
  line-height: 1.4;
}

/* 特性卡片 */
.guide-feature-cards {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
  margin: 32rpx 0;
}

.feature-card {
  padding: 24rpx;
  background: #fafafa;
  border: 1rpx solid #e8e8e8;
  border-radius: 12rpx;
}

.card-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.card-icon {
  width: 24rpx;
  height: 24rpx;
}

.card-title {
  font-size: 26rpx;
  font-weight: 500;
  color: #262626;
}

.card-desc {
  display: block;
  font-size: 24rpx;
  color: #595959;
  line-height: 1.4;
}

/* 演示区域 */
.guide-demo {
  padding: 24rpx;
  background: #e6f7ff;
  border: 1rpx solid #91d5ff;
  border-radius: 12rpx;
  margin-top: 32rpx;
}

.demo-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 12rpx;
}

.demo-title {
  font-size: 26rpx;
  font-weight: 500;
  color: #1890ff;
}

.demo-text {
  display: block;
  font-size: 24rpx;
  color: #1890ff;
  line-height: 1.4;
}

/* 流程展示 */
.guide-process {
  margin: 40rpx 0;
}

.process-step {
  display: flex;
  align-items: center;
  gap: 20rpx;
  padding: 20rpx 0;
}

.process-icon {
  width: 60rpx;
  height: 60rpx;
  background: #1890ff;
  color: #ffffff;
  border-radius: 50%;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  flex-shrink: 0;
}

.process-content {
  flex: 1;
}

.process-title {
  display: block;
  font-size: 26rpx;
  font-weight: 500;
  color: #262626;
  margin-bottom: 4rpx;
}

.process-desc {
  display: block;
  font-size: 24rpx;
  color: #595959;
}

.process-arrow {
  text-align: center;
  font-size: 28rpx;
  color: #8c8c8c;
  padding: 8rpx 0;
}

/* 示例展示 */
.guide-example {
  margin-top: 32rpx;
}

.example-title {
  display: block;
  font-size: 26rpx;
  font-weight: 500;
  color: #262626;
  margin-bottom: 12rpx;
}

.example-box {
  padding: 24rpx;
  background: #fafafa;
  border: 1rpx solid #e8e8e8;
  border-radius: 12rpx;
}

.example-text {
  display: block;
  font-size: 24rpx;
  color: #1890ff;
  font-style: italic;
  text-align: center;
  line-height: 1.4;
}

/* 跨界示例 */
.cross-examples {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin: 32rpx 0;
}

.cross-item {
  padding: 24rpx;
  background: #fafafa;
  border: 1rpx solid #e8e8e8;
  border-radius: 12rpx;
}

.cross-header {
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 16rpx;
  margin-bottom: 12rpx;
}

.cross-from,
.cross-to {
  font-size: 24rpx;
  font-weight: 500;
  padding: 8rpx 16rpx;
  border-radius: 20rpx;
}

.cross-from {
  background: #f0f7ff;
  color: #1890ff;
  border: 1rpx solid #91d5ff;
}

.cross-to {
  background: #f6ffed;
  color: #52c41a;
  border: 1rpx solid #b7eb8f;
}

.cross-arrow {
  width: 20rpx;
  height: 20rpx;
}

.cross-desc {
  display: block;
  font-size: 24rpx;
  color: #595959;
  text-align: center;
  line-height: 1.4;
}

/* 洞察区域 */
.guide-insight {
  display: flex;
  gap: 16rpx;
  padding: 24rpx;
  background: #fff7e6;
  border: 1rpx solid #ffe58f;
  border-radius: 12rpx;
  margin-top: 32rpx;
}

.insight-icon {
  width: 24rpx;
  height: 24rpx;
  flex-shrink: 0;
  margin-top: 4rpx;
}

.insight-content {
  flex: 1;
}

.insight-title {
  display: block;
  font-size: 26rpx;
  font-weight: 500;
  color: #fa8c16;
  margin-bottom: 8rpx;
}

.insight-text {
  display: block;
  font-size: 24rpx;
  color: #fa8c16;
  line-height: 1.4;
}

/* 快速开始选项 */
.quick-start-options {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
  margin: 40rpx 0;
}

.start-option {
  display: flex;
  flex-direction: column;
  align-items: center;
  gap: 12rpx;
  padding: 32rpx 24rpx;
  background: #fafafa;
  border: 2rpx solid #e8e8e8;
  border-radius: 16rpx;
  transition: all 0.3s ease;
}

.start-option:active {
  background: #f0f0f0;
  border-color: #1890ff;
  transform: translateY(-4rpx);
}

.option-icon {
  width: 60rpx;
  height: 60rpx;
  margin-bottom: 8rpx;
}

.option-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #262626;
  text-align: center;
}

.option-desc {
  font-size: 24rpx;
  color: #8c8c8c;
  text-align: center;
}

/* 提醒区域 */
.guide-reminder {
  margin-top: 40rpx;
  padding-top: 32rpx;
  border-top: 1rpx solid #f0f0f0;
}

.reminder-title {
  display: block;
  font-size: 26rpx;
  font-weight: 500;
  color: #262626;
  margin-bottom: 16rpx;
  text-align: center;
}

.reminder-tips {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.reminder-tips text {
  display: block;
  font-size: 24rpx;
  color: #595959;
  line-height: 1.4;
}

/* 进度指示器 */
.guide-progress {
  margin-top: 40rpx;
  padding-top: 20rpx;
  border-top: 1rpx solid #f0f0f0;
}

.progress-text {
  display: block;
  font-size: 24rpx;
  color: #8c8c8c;
  text-align: center;
  margin-bottom: 12rpx;
}

.progress-bar {
  width: 100%;
  height: 8rpx;
  background: #f0f0f0;
  border-radius: 4rpx;
  overflow: hidden;
}

.progress-fill {
  height: 100%;
  background: #1890ff;
  transition: width 0.3s ease;
}

.welcome .progress-bar {
  background: rgba(255, 255, 255, 0.3);
}

.welcome .progress-fill {
  background: #ffffff;
}

/* 最终页操作区域 */
.guide-actions {
  margin-top: 40rpx;
  padding-top: 32rpx;
  border-top: 1rpx solid #f0f0f0;
}

.btn-start {
  width: 100%;
  height: 88rpx;
  background: #1890ff;
  border-radius: 12rpx;
  font-size: 32rpx;
  font-weight: 600;
  color: #ffffff;
  margin-bottom: 24rpx;
}

.btn-start:active {
  background: #096dd9;
}

.extra-options {
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.option-checkbox {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.checkbox-text {
  font-size: 24rpx;
  color: #8c8c8c;
}

.btn-review {
  padding: 12rpx 24rpx;
  background: transparent;
  border: 1rpx solid #d9d9d9;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #595959;
}

.btn-review:active {
  background: #f5f5f5;
}

/* 导航按钮 */
.guide-navigation {
  position: fixed;
  bottom: 60rpx;
  left: 0;
  right: 0;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 32rpx;
  z-index: 100;
}

.btn-nav {
  padding: 16rpx 32rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
  min-width: 160rpx;
}

.btn-nav.prev {
  background: #ffffff;
  border: 1rpx solid #d9d9d9;
  color: #595959;
}

.btn-nav.prev[disabled] {
  opacity: 0.5;
}

.btn-nav.next {
  background: #1890ff;
  color: #ffffff;
}

.page-indicators {
  display: flex;
  gap: 12rpx;
}

.page-indicator {
  width: 12rpx;
  height: 12rpx;
  background: rgba(255, 255, 255, 0.5);
  border-radius: 50%;
  transition: all 0.3s ease;
}

.page-indicator.active {
  background: #ffffff;
  transform: scale(1.2);
}

/* 跳过引导 */
.guide-skip {
  position: fixed;
  top: 60rpx;
  right: 32rpx;
  z-index: 100;
}

.guide-skip text {
  font-size: 24rpx;
  color: #ffffff;
  text-decoration: underline;
  padding: 12rpx 16rpx;
}

/* 响应式调整 */
@media (max-width: 768px) {
  .guide-content {
    width: 95%;
    padding: 32rpx 24rpx;
  }
  
  .guide-image {
    width: 300rpx;
    height: 225rpx;
  }
  
  .guide-navigation {
    padding: 0 24rpx;
  }
  
  .btn-nav {
    min-width: 140rpx;
    padding: 12rpx 24rpx;
  }
}

/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.guide-content {
  animation: fadeIn 0.5s ease-out;
}