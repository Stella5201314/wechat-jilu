.page { min-height:100vh; background:#f7f8fa; padding-bottom:60px; }
.profile { padding:12px; }
.user { display:flex; gap:12px; align-items:center; background:#fff; padding:12px; border-radius:8px; }
.avatar { width:64px; height:64px; border-radius:8px; }
.info { display:flex; flex-direction:column; }
.name { font-weight:700; font-size:16px; }
.menu { margin-top:12px; display:flex; flex-direction:column; gap:8px; }