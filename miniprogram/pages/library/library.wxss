.page { min-height:100vh; background:#f7f8fa; padding-bottom:60px; }
.toolbar { display:flex; gap:8px; padding:10px; align-items:center; background:#fff; border-bottom:1px solid #eee; }
input { flex:1; padding:8px; border-radius:6px; border:1px solid #eee; background:#fff; }
.list { padding:12px; height:calc(100vh - 160px); }
.list-footer { text-align:center; color:#999; padding:12px 0; }
