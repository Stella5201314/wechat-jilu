.page { min-height:100vh; background:#f7f8fa; padding-bottom:60px; }
.search-area { display:flex; gap:8px; padding:10px; background:#fff; border-bottom:1px solid #eee; }
input { flex:1; padding:8px; border-radius:6px; border:1px solid #eee; background:#fff; }
.tpl-list { padding:12px; }
.tpl-card { background:#fff; padding:12px; border-radius:8px; margin-bottom:10px; }
.tpl-header { display:flex; justify-content:space-between; align-items:center; }
.tpl-title { font-weight:700; }
.tpl-body { color:#666; margin-top:8px; }
.tpl-actions { margin-top:10px; display:flex; gap:8px; justify-content:flex-end; }