/* pages/index/index.wxss */

/* 基础样式 */
.writing-workspace {
  display: flex;
  flex-direction: column;
  height: 100vh;
  background-color: #f5f5f5;
}

/* 顶部导航区 */
.top-nav {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 24rpx;
  background-color: #ffffff;
  border-bottom: 1rpx solid #e8e8e8;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.06);
  z-index: 100;
}

.logo {
  display: flex;
  align-items: center;
  gap: 12rpx;
}

.logo-icon {
  width: 40rpx;
  height: 40rpx;
}

.logo-text {
  font-size: 32rpx;
  font-weight: 600;
  color: #1890ff;
}

.nav-actions {
  display: flex;
  align-items: center;
  gap: 16rpx;
}

.btn-nav {
  display: flex;
  align-items: center;
  gap: 6rpx;
  padding: 12rpx 20rpx;
  background: #f0f7ff;
  border: 1rpx solid #91d5ff;
  border-radius: 8rpx;
  font-size: 24rpx;
  color: #1890ff;
  line-height: 1;
}

.btn-nav::after {
  border: none;
}

.btn-icon {
  width: 24rpx;
  height: 24rpx;
}

/* 主工作区 */
.main-workspace {
  flex: 1;
  display: flex;
  overflow: hidden;
}

/* 移动端布局 */
.mobile-layout {
  flex-direction: column;
}

/* 通用面板样式 */
.left-panel,
.center-panel,
.right-panel {
  height: 100%;
  background-color: #ffffff;
}

/* 左侧面板 */
.left-panel {
  width: 320rpx;
  border-right: 1rpx solid #e8e8e8;
  display: flex;
  flex-direction: column;
}

.control-panel {
  padding: 20rpx;
}

/* 卡片样式 */
.card {
  background: #ffffff;
  border: 1rpx solid #e8e8e8;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.04);
}

/* 配置区块 */
.config-section {
  margin-bottom: 24rpx;
}

.section-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 20rpx;
  padding-bottom: 16rpx;
  border-bottom: 1rpx solid #f0f0f0;
}

.section-icon {
  width: 28rpx;
  height: 28rpx;
}

.section-title {
  font-size: 28rpx;
  font-weight: 500;
  color: #262626;
  flex: 1;
}

.section-actions {
  display: flex;
  gap: 12rpx;
}

/* 需求输入框 */
.requirement-input {
  width: 100%;
  min-height: 120rpx;
  padding: 16rpx;
  background: #fafafa;
  border: 1rpx solid #d9d9d9;
  border-radius: 8rpx;
  font-size: 26rpx;
  line-height: 1.5;
  margin-bottom: 12rpx;
}

.requirement-input:focus {
  border-color: #1890ff;
  background: #e6f7ff;
}

.character-count {
  text-align: right;
  font-size: 24rpx;
  color: #8c8c8c;
  margin-bottom: 20rpx;
}

/* 快速配置 */
.quick-config {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.config-item {
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.config-label {
  font-size: 26rpx;
  color: #595959;
  min-width: 140rpx;
}

.config-picker {
  flex: 1;
}

.picker-view {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 16rpx;
  background: #fafafa;
  border: 1rpx solid #d9d9d9;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #262626;
}

.picker-arrow {
  width: 20rpx;
  height: 20rpx;
}

/* 按钮样式 */
.btn-outline-generate,
.btn-outline-clear {
  min-width: 120rpx;
  padding: 8rpx 16rpx;
  font-size: 24rpx;
}

.btn-outline-generate {
  background: #1890ff;
  color: #ffffff;
}

.btn-outline-clear {
  background: #ffffff;
  border: 1rpx solid #d9d9d9;
  color: #595959;
}

/* 提纲容器 */
.outline-container {
  min-height: 200rpx;
}

.empty-state {
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
  padding: 60rpx 0;
}

.empty-image {
  width: 120rpx;
  height: 120rpx;
  margin-bottom: 20rpx;
  opacity: 0.6;
}

.empty-text {
  font-size: 28rpx;
  color: #8c8c8c;
  margin-bottom: 8rpx;
}

.empty-hint {
  font-size: 24rpx;
  color: #bfbfbf;
}

/* 生成选项 */
.generation-options {
  margin-bottom: 24rpx;
}

.option-item {
  margin-bottom: 20rpx;
}

.option-label {
  display: block;
  font-size: 26rpx;
  color: #595959;
  margin-bottom: 12rpx;
}

/* 操作按钮 */
.action-buttons {
  display: flex;
  flex-direction: column;
  gap: 16rpx;
}

.btn-generate-primary {
  width: 100%;
  height: 80rpx;
  background: #1890ff;
  border-radius: 8rpx;
  font-size: 28rpx;
  font-weight: 500;
}

.btn-generate-primary[disabled] {
  background: #f5f5f5;
  color: #bfbfbf;
}

.secondary-actions {
  display: flex;
  gap: 12rpx;
}

.btn-save-template,
.btn-clear-all {
  flex: 1;
  height: 64rpx;
  background: #ffffff;
  border: 1rpx solid #d9d9d9;
  border-radius: 8rpx;
  font-size: 26rpx;
  color: #595959;
}

.btn-save-template[disabled],
.btn-clear-all[disabled] {
  background: #f5f5f5;
  color: #bfbfbf;
  border-color: #f0f0f0;
}

/* 中间面板 */
.center-panel {
  flex: 1;
  min-width: 400rpx;
  padding: 20rpx;
  border-right: 1rpx solid #e8e8e8;
}

/* 使用指南 */
.usage-guide {
  margin-top: 20rpx;
}

.guide-header {
  display: flex;
  align-items: center;
  gap: 12rpx;
  margin-bottom: 20rpx;
}

.guide-icon {
  width: 24rpx;
  height: 24rpx;
}

.guide-title {
  font-size: 26rpx;
  font-weight: 500;
  color: #262626;
}

.guide-steps {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.step-item {
  display: flex;
  gap: 16rpx;
}

.step-number {
  width: 40rpx;
  height: 40rpx;
  background: #1890ff;
  border-radius: 50%;
  color: #ffffff;
  font-size: 24rpx;
  font-weight: 600;
  display: flex;
  align-items: center;
  justify-content: center;
  flex-shrink: 0;
}

.step-content {
  flex: 1;
}

.step-title {
  display: block;
  font-size: 26rpx;
  font-weight: 500;
  color: #262626;
  margin-bottom: 4rpx;
}

.step-desc {
  display: block;
  font-size: 24rpx;
  color: #595959;
  line-height: 1.4;
}

/* 右侧面板 */
.right-panel {
  width: 360rpx;
  padding: 20rpx;
}

/* 底部状态栏 */
.bottom-status {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12rpx 24rpx;
  background: #ffffff;
  border-top: 1rpx solid #e8e8e8;
  box-shadow: 0 -2rpx 8rpx rgba(0, 0, 0, 0.06);
}

.status-items {
  display: flex;
  align-items: center;
  gap: 24rpx;
}

.status-item {
  display: flex;
  align-items: center;
  gap: 8rpx;
}

.status-icon {
  width: 20rpx;
  height: 20rpx;
}

.status-text {
  font-size: 24rpx;
  color: #595959;
}

.btn-quick-copy {
  background: #52c41a;
  color: #ffffff;
  border-radius: 6rpx;
  font-size: 24rpx;
  padding: 8rpx 20rpx;
}

.btn-quick-copy[disabled] {
  background: #f5f5f5;
  color: #bfbfbf;
}

/* 模态对话框 */
.modal-template {
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 1000;
}

.modal-mask {
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.45);
}

.modal-content {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  width: 80%;
  max-width: 600rpx;
  background: #ffffff;
  border-radius: 12rpx;
  overflow: hidden;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
}

.modal-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 24rpx;
  background: #fafafa;
  border-bottom: 1rpx solid #e8e8e8;
}

.modal-title {
  font-size: 30rpx;
  font-weight: 500;
  color: #262626;
}

.modal-close {
  width: 24rpx;
  height: 24rpx;
  padding: 8rpx;
  opacity: 0.45;
}

.modal-close:active {
  opacity: 0.65;
}

.modal-body {
  padding: 24rpx;
}

.template-name-input {
  width: 100%;
  padding: 16rpx;
  background: #fafafa;
  border: 1rpx solid #d9d9d9;
  border-radius: 8rpx;
  font-size: 26rpx;
  margin-bottom: 16rpx;
}

.template-desc-input {
  width: 100%;
  min-height: 120rpx;
  padding: 16rpx;
  background: #fafafa;
  border: 1rpx solid #d9d9d9;
  border-radius: 8rpx;
  font-size: 26rpx;
  line-height: 1.5;
  margin-bottom: 20rpx;
}

.template-tags {
  margin-top: 20rpx;
}

.tags-label {
  display: block;
  font-size: 26rpx;
  color: #595959;
  margin-bottom: 12rpx;
}

.tags-list {
  display: flex;
  flex-wrap: wrap;
  gap: 12rpx;
}

.tag-item {
  padding: 8rpx 16rpx;
  background: #f5f5f5;
  border: 1rpx solid #d9d9d9;
  border-radius: 20rpx;
  font-size: 24rpx;
  color: #595959;
}

.tag-item.selected {
  background: #e6f7ff;
  border-color: #91d5ff;
  color: #1890ff;
}

.modal-footer {
  display: flex;
  padding: 16rpx 24rpx;
  background: #fafafa;
  border-top: 1rpx solid #e8e8e8;
  gap: 16rpx;
}

.btn-modal-cancel {
  flex: 1;
  background: #ffffff;
  border: 1rpx solid #d9d9d9;
  border-radius: 8rpx;
  color: #595959;
}

.btn-modal-confirm {
  flex: 1;
  background: #1890ff;
  border-radius: 8rpx;
  color: #ffffff;
}

.btn-modal-confirm[disabled] {
  background: #f5f5f5;
  color: #bfbfbf;
}

/* 响应式设计 */
@media (max-width: 768px) {
  .main-workspace {
    flex-direction: column;
  }
  
  .left-panel,
  .center-panel,
  .right-panel {
    width: 100%;
    border-right: none;
    border-bottom: 1rpx solid #e8e8e8;
  }
  
  .left-panel,
  .center-panel {
    flex: none;
    height: auto;
    max-height: 50vh;
  }
  
  .right-panel {
    flex: 1;
  }
}

/* 动画效果 */
@keyframes fadeIn {
  from {
    opacity: 0;
    transform: translateY(20rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}

.card {
  animation: fadeIn 0.3s ease-out;
}