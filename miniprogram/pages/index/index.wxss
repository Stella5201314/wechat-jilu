/* index page styles (补充或覆盖原有规则) */
.tag-row { display:flex; gap:12rpx; align-items:center; flex-wrap:wrap; }

/* 标签芯片 */
.chip {
  display:flex;
  align-items:center;
  gap:8rpx;
  padding:8rpx 12rpx;
  border-radius:20rpx;
  background:#fff;
  border:1rpx solid #eee;
  box-shadow: 0 4rpx 10rpx rgba(0,0,0,0.02);
}
.chip--active { background:var(--color-primary); border-color:var(--color-primary); }
.chip-text { font-size:28rpx; color:var(--text-primary); }
.chip--active .chip-text { color:#fff; }

/* info 图标（可放小图标 assets/icons/info.png） */
.chip-info { width:28rpx; height:28rpx; margin-left:6rpx; opacity:0.9; }

/* toolbar button styles 保持和之前一致 */
.btn-plain.small {
  padding:8rpx 12rpx;
  border-radius:8rpx;
  background:#fff;
  border:1rpx solid #eee;
  font-size:26rpx;
  color:var(--text-primary);
  min-width:80rpx;
}

/* 生成按钮 */
.btn-primary.large {
  width:92%;
  padding:16rpx;
  border-radius:12rpx;
  font-size:32rpx;
  background:var(--color-primary);
  color:#fff;
  text-align:center;
}